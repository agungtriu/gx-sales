<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.agungtriu.gxsales.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.agungtriu.gxsales.ui.dashboard.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/dashboardFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_dashboardFragment_to_form_navigation"
            app:destination="@id/form_navigation" />
    </fragment>

    <action
        android:id="@+id/action_global_to_form_navigation"
        app:destination="@id/form_navigation" />

    <navigation
        android:id="@+id/form_navigation"
        app:startDestination="@id/addLeadFragment">
        <fragment
            android:id="@+id/locationFragment"
            android:name="com.agungtriu.gxsales.ui.dashboard.location.LocationFragment"
            android:label="fragment_location"
            tools:layout="@layout/fragment_location" />
        <fragment
            android:id="@+id/addLeadFragment"
            android:name="com.agungtriu.gxsales.ui.dashboard.formlead.FormLeadFragment"
            android:label="fragment_add_lead"
            tools:layout="@layout/fragment_add_lead">
            <action
                android:id="@+id/action_addLeadFragment_to_addLeadSubmitFragment"
                app:destination="@id/addLeadSubmitFragment" />
            <action
                android:id="@+id/action_addLeadFragment_to_locationFragment"
                app:destination="@id/locationFragment" />
        </fragment>
        <fragment
            android:id="@+id/addLeadSubmitFragment"
            android:name="com.agungtriu.gxsales.ui.dashboard.formleadsubmit.FormLeadSubmitFragment"
            android:label="fragment_add_lead_submit"
            tools:layout="@layout/fragment_add_lead_submit">
            <action
                android:id="@+id/action_addLeadSubmitFragment_to_dashboardFragment"
                app:destination="@id/dashboardFragment"
                app:popUpTo="@id/form_navigation"
                app:popUpToInclusive="true" />
        </fragment>
    </navigation>
</navigation>