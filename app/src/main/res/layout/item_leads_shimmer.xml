<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp">

    <TextView
        android:id="@+id/tv_itemleads_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/color_shimmer"
        android:fontFamily="@font/inter_medium"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_itemleads_number"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/color_shimmer"
        android:fontFamily="@font/inter_semi_bold"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_itemleads_name" />

    <TextView
        android:id="@+id/tv_itemleads_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/color_shimmer"
        android:fontFamily="@font/inter_regular"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/tv_itemleads_number" />

    <TextView
        android:id="@+id/tv_itemleads_status"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/all_rectangle_rounded_4dp"
        android:backgroundTint="@color/color_shimmer"
        android:fontFamily="@font/inter_regular"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_itemleads_address" />

    <TextView
        android:id="@+id/tv_itemleads_probability"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/all_rectangle_rounded_4dp"
        android:backgroundTint="@color/color_shimmer"
        android:fontFamily="@font/inter_regular"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/tv_itemleads_status"
        app:layout_constraintTop_toTopOf="@id/tv_itemleads_status" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_itemleads_first"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemleads_status"
        app:layout_constraintStart_toEndOf="@id/tv_itemleads_probability"
        app:layout_constraintTop_toTopOf="@id/tv_itemleads_status" />

    <TextView
        android:id="@+id/tv_itemleads_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@color/color_shimmer"
        android:fontFamily="@font/inter_regular"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemleads_status"
        app:layout_constraintStart_toEndOf="@id/divider_itemleads_first"
        app:layout_constraintTop_toTopOf="@id/tv_itemleads_status" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_itemleads_second"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemleads_status"
        app:layout_constraintStart_toEndOf="@id/tv_itemleads_date"
        app:layout_constraintTop_toTopOf="@id/tv_itemleads_status" />

    <TextView
        android:id="@+id/tv_itemleads_branch"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@color/color_shimmer"
        android:fontFamily="@font/inter_regular"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemleads_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/divider_itemleads_second"
        app:layout_constraintTop_toTopOf="@id/tv_itemleads_status" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/all_dotted"
        app:layout_constraintTop_toBottomOf="@id/tv_itemleads_status" />

</androidx.constraintlayout.widget.ConstraintLayout>