<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.GXSales" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/color_surface</item>
        <item name="android:statusBarColor">@color/color_surface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.GXSales" parent="Base.Theme.GXSales" />

    <style name="Theme.GXSales.Starting" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="postSplashScreenTheme">@style/Theme.GXSales</item>
    </style>

    <style name="Theme.GXSales.OutlinedRoundedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.GXSales.Rounded
        </item>
        <item name="boxStrokeColor">#D0D5DD</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.GXSales.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.GXSales.Button.OutlinedRoundedBox" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.GXSales.Rounded
        </item>
    </style>

    <style name="Theme.GXSales.OutlinedRoundedBox.Search" parent="">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.GXSales.Rounded
        </item>
    </style>

    <style name="Theme.GXSales.Button.OutlinedRoundedBox.Date" parent="Theme.GXSales.Button.OutlinedRoundedBox">
        <item name="boxStrokeColor">#ACADC1</item>
        <item name="backgroundColor">?attr/colorSurface</item>
    </style>

    <style name="Theme.GXSales.Button.OutlinedRoundedBox.Login" parent="Theme.GXSales.Button.OutlinedRoundedBox">
        <item name="backgroundTint">#F9C900</item>
        <item name="strokeColor">#F9C900</item>
        <item name="android:textColor">#161200</item>
        <item name="drawableTint">#161200</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>


    <style name="Theme.GXSales.Button.OutlinedRoundedBox.Logout" parent="Theme.GXSales.Button.OutlinedRoundedBox">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">#DE5263</item>
        <item name="android:textColor">#DE5263</item>
        <item name="drawableTint">#DE5263</item>
    </style>

    <style name="Theme.GXSales.Button.OutlinedRoundedBox.Reset" parent="Theme.GXSales.Button.OutlinedRoundedBox">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">#D0D5DD</item>
        <item name="android:textColor">#344054</item>
    </style>

    <style name="Theme.GXSales.Button.OutlinedRoundedBox.Previous" parent="Theme.GXSales.Button.OutlinedRoundedBox">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">#F9C900</item>
        <item name="android:textColor">#344054</item>
    </style>

    <style name="Theme.GXSales.TextInputLayout.OutlinedRoundedBox.ExposedDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.GXSales.Rounded
        </item>
        <item name="boxStrokeColor">#ACADC1</item>
        <item name="backgroundColor">?attr/colorSurface</item>
    </style>

    <style name="Theme.GXSales.TextAppearance.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.GXSales.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radiobutton</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>