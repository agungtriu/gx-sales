<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_itemshop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp">

    <ImageView
        android:id="@+id/iv_itemshop"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemshop_type_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_itemshop_name" />

    <TextView
        android:id="@+id/tv_itemshop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/inter_medium"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="@color/color_all_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_itemshop"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_itemshop_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_regular"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="@id/tv_itemshop_name"
        app:layout_constraintStart_toStartOf="@id/tv_itemshop_name"
        app:layout_constraintTop_toBottomOf="@id/tv_itemshop_name" />

    <TextView
        android:id="@+id/tv_itemshop_stock_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/shop_stock"
        android:textColor="@color/color_shop_item_title"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@id/tv_itemshop_stock"
        app:layout_constraintStart_toStartOf="@id/tv_itemshop_name"
        app:layout_constraintTop_toBottomOf="@id/tv_itemshop_price" />

    <TextView
        android:id="@+id/tv_itemshop_stock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="@color/color_shop_item"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/tv_itemshop_name"
        app:layout_constraintStart_toEndOf="@id/tv_itemshop_stock_title"
        app:layout_constraintTop_toBottomOf="@id/tv_itemshop_price" />

    <TextView
        android:id="@+id/tv_itemshop_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/shop_type"
        android:textColor="@color/color_shop_item_title"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/tv_itemshop_name"
        app:layout_constraintTop_toBottomOf="@id/tv_itemshop_stock_title" />

    <TextView
        android:id="@+id/tv_itemshop_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/color_shop_item"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemshop_type_title"
        app:layout_constraintStart_toEndOf="@id/tv_itemshop_type_title"
        app:layout_constraintTop_toTopOf="@id/tv_itemshop_type_title" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_itemshop_second"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemshop_type_title"
        app:layout_constraintStart_toEndOf="@id/tv_itemshop_type"
        app:layout_constraintTop_toTopOf="@id/tv_itemshop_type_title" />

    <TextView
        android:id="@+id/tv_itemshop_tax_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/itemshop_tax_title"
        android:textColor="@color/color_shop_item_title"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemshop_type_title"
        app:layout_constraintStart_toEndOf="@id/divider_itemshop_second"
        app:layout_constraintTop_toTopOf="@id/tv_itemshop_type_title" />

    <TextView
        android:id="@+id/tv_itemshop_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/color_shop_item"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemshop_type_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/tv_itemshop_tax_title"
        app:layout_constraintTop_toTopOf="@id/tv_itemshop_type_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/all_dotted"
        app:layout_constraintTop_toBottomOf="@id/tv_itemshop_type_title" />

</androidx.constraintlayout.widget.ConstraintLayout>