<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.GXSales" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.GXSales" parent="Base.Theme.GXSales" />

    <style name="Theme.GXSales.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_background</item>
        <item name="postSplashScreenTheme">@style/Theme.GXSales</item>
        <item name="windowSplashScreenBackground">?attr/colorSurface</item>
    </style>

    <style name="Theme.GXSales.OutlinedRoundedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.GXSales.TextInputLayout.Rounded
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.GXSales.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>